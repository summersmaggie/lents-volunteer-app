<div class="container" id="calendar">
  <h2>Available Time Slots</h2>
  <p>Click a time slot below that works with your schedule to make a reservation.</p>

  <br>
  <%= month_calendar events: @time_slots do |date, time_slots| %>
    <%= date.day %>

    <% time_slots.each do |time_slot| %>
      <div>
      <p><%= link_to time_slot.start_time, time_slot_path(time_slot) %> with <%= time_slot.name %></p>
      </div>
    <% end %>
  <% end %>

  <button><%= link_to 'Back to Home', root_path %></button>
  <button><%= link_to 'Sign up to Volunteer', new_time_slot_path %></button>
</div>
